<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    tools:context=".WiflyControlActivity" >
    <Button
        android:id="@+id/colorStatus"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip" />
    <Button
        android:id="@+id/colorDebug"
        android:layout_toRightOf="@id/colorStatus"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip" />

    <ImageView
        android:id="@+id/colorPicker"
        android:contentDescription="@null"
        android:src="@drawable/color_picker_wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#ffff0000" />

    <ImageView
        android:id="@+id/crosshair"
        android:contentDescription="@null"
        android:src="@drawable/color_picker_knob"
        android:layout_width="40dip"
        android:layout_height="40dip" />
    <TextView
        android:id="@+id/debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/debugAngle"
        android:layout_toRightOf="@id/debug"
        android:layout_marginLeft="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>