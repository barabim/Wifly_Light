<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    tools:context=".WiflyControlActivity" >
    <biz.bruenn.WyLight.view.ColorView
        android:id="@+id/colorStatus"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip" />
    <ImageView
        android:id="@+id/colorPicker"
        android:contentDescription="@null"
        android:src="@drawable/color_picker_wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    <ImageView
        android:id="@+id/crosshair"
        android:contentDescription="@null"
        android:src="@drawable/color_picker_knob"
        android:layout_width="40dip"
        android:layout_height="40dip" />
    <View
        android:id="@+id/valuePicker"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="40dp"
        android:layout_below="@id/colorPicker"
        android:background="#ffff0000" />
    <ImageView
        android:id="@+id/valueCrosshair"
        android:contentDescription="@null"
        android:src="@drawable/color_picker_knob"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignTop="@id/valuePicker"
        android:layout_centerHorizontal="true" />
</RelativeLayout>